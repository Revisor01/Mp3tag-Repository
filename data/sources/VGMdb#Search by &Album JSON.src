[ParserScriptAlbum]=...

## Comment/uncomment for debugging purposes:
DebugWriteInput "C:\Users\egual\Desktop\mp3tag-deezer-ws-album-debug.out.html"
Debug "ON" "C:\Users\egual\Desktop\album.txt"

json "ON"


# Arrangers
outputto "CONDUCTOR"
json_select "arrangers"
ifnot ""
	json_select "names"
	
	json_select "en"
	say ", "
	sayrest
  
	
  endif




# Catalog
OutputTo "Catalog"
json_select "catalog"
SayRest

# notes
OutputTo "notes"
json_select "category"
SayRest

# Genre
OutputTo "genre"
json_select "classification"
ifnot ""
SayRest
endif

# Album
OutputTo "ALBUM"
json_select "name"
SayRest
json_unselect_object


# Artist 
outputto "artist"
json_foreach "composers"

	json_select "names"

	json_select "en"
	ifnot ""
sayrest
# Adding this below will output all the artists(composers) but if omitted it will only get the first array.
say ", "
endif
json_foreach_end

# Tracks
json_select_array "discs" 1
json_foreach "tracks"


# Length
	OutputTo "_LENGTH"
	json_select "0"
	json_select "track_length"
	replace ":" ""
	SayRest
	say "|"
	
	# Title
	OutputTo "Title"
	json_select "0"
	json_select "names"
	json_select "English"
	SayRest
	say "|"
		
json_foreach_end








# Media type
OutputTo "MEDIATYPE"
json_select "media_format"
SayRest
	
# Comments
OutputTo "comment"
json_select "notes"
SayRest	
	
# Cover
OutputTo "COVERURL"
json_select "picture_full"
SayRest
## You can choose the cover resolution here
# json_select "picture_small"
# json_select "picture_thumb"

# publish_format
OutputTo "format"
json_select "publish_format"
SayRest
	
# publisher
OutputTo "publisher"
json_select "publisher"
json_select "names"
json_select "en"
SayRest

json_unselect_object	
# rating
OutputTo "rating"
json_select "rating"
SayRest	

# release_date
OutputTo "YEAR"
json_select "release_date"
SayRest	
## B) Year only, e.g. 2018
#SayUntil "-"

# vgmdb_link
OutputTo "www"
json_select "vgmdb_link"
SayRest
	





